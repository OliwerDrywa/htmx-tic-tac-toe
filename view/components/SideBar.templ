package components

css animateToCenter() {
	transform: translateX(50vw) translateX(-50%);
}

templ SideBar(isCentered bool) {
	<aside
		id="aside"
		class={ "h-full mx-auto transition flex flex-col p-4", templ.KV(animateToCenter(), isCentered) }
	>
		<label
			for="sidebar-input"
			class="h-full select-none flex flex-col"
		>
			@Title()
			{ children... }
		</label>
	</aside>
}
